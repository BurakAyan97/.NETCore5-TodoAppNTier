@model List<WorkListDto>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Todo App</title>
    <link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-2">
        <div class="text-end my-2">
            <a class="btn btn-primary btn-sm" asp-action="Create" asp-controller="Home">Yeni İş Ekle</a>
        </div>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>İş</th>
                    <th>Durumu</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Definition</td>
                        <td>@(item.IsCompleted?"Tamamlandı":"Tamamlanmadı")</td>
                        <td><a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning">Güncelle</a><td>
                        <td><a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-danger">Sil</a><td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>